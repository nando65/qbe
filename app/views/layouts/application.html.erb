<!DOCTYPE html>
<html>
  <head>
    <title>Qbe</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <link rel="icon" type="image/png" href="<%= image_path('qbe_favicon.png') %>">
    <%= csrf_meta_tags %>
    <script src="../../javascripts/select2.js"></script>
    <script>
        function ready_qbe(){
            $(".endorsement").select2();
          }
        $(document).ready(ready_qbe);
        $(document).on('page:load', ready_qbe);
    </script>

  </head>
  <body class="<%= controller_name %>-<%= action_name %>">
    <div id="main-wrapper">
      <div id="header-wrapper">
        <div id="header">
          <%= link_to(image_tag('logo_qbe.svg'), {controller: '/home', action: :index}, id: 'logo') %>
            <%= link_to(image_tag('world.svg'), {controller: :map, action: :index}, id: 'world_image') %>
            <div class="searchBar" id="divContent">
            <input id="searchInput" type="text" name="txt1"></input>
            </div>
            <%= link_to(image_tag('notification_bubble.svg'),  {controller: '/notifications', action: :index}, id: 'notification_bubble') %>
            <% if current_user %>
            <%= link_to(current_user.first_name+" "+current_user.last_name[0],{controller: :profile, action: :edit_user} , id:'user_name')  %>
            <% end %>
      </div> <!-- header -->
</div> <!-- header wrapper-->
        <span class="clearer"></span>
       </div><!--main wrapper -->
      <div id="content-wrapper">
        <div class="col-md-4 col-md-offset-4">
        <%= yield %>
        </div><!--col md 4-->
      </div>
      <div id="footer-wrapper">
      </div>
    </div>
  </body>
</html>