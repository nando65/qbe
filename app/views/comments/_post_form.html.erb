 <%= form_for(comment,id: "post-comment-<% t.id% >", remote: true, html: { class: new ? 'new-comment-form new_comment' : 'new_comment' } ) do |c| %>
                      <fieldset>
                        <ul style="list-style:none; padding:0px;">
                          <li>
                            <%= c.hidden_field :user_id, :value => current_user.id %>
                            <%= c.hidden_field :post_id, :value => t.id %>
                            <%= c.text_area :commentary, class: "post_control comment_commentary", placeholder: "Write a comment..." %>
                          </li>
                          <li>
                              <%= c.submit 'Send', class: 'button' %>
                          </li>
                        </ul>
                      </fieldset>
<%end%>
